<div class="container">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li>Regulated Fish</li>
      </ol>
    </div>
  </div>
  <div class="row">
      <section class="fishes">
        <% @fishes.each do |fish| %>
          <div class="col-md-4">
            <article class="fish">
              <%= link_to regulated_fish_path(fish) do %>
                <%= image_tag fish.img_path, class: "img-responsive img-thumbnail", alt: fish.name %>
              <% end %>
              <%= link_to title(fish), regulated_fish_path(fish) %>
              <h4>Regulations</h4>
              <ul class="list-unstyled">
                <li><span class="sub-title">Minimum Size</span> <%= fish.minimum_size %></li>
                <li><span class="sub-title">Bag Limit</span> <%= fish.bag_limit %></li>
              </ul>
            </article>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>
